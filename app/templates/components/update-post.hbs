<form>
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title id="title" placeholder=post.title}}
  </div>

  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author id="author" placeholder=post.author}}
  </div>

  <div class="form-group">
    <label for="text">Text</label>
    {{textarea value=text id="text" placeholder=post.text}}
  </div>

  <div class="form-group">
    <label for="image">Image URL</label>
    {{input value=image id="image" placeholder=post.image}}
  </div>

  <button {{action 'update' post}}>Save</button>
  <button {{action 'delete' post}}>Delete</button>
</form>
